<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yjt.opengles.MainActivity">


    <Button
        android:id="@+id/lesson01_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:contentDescription="lesson01_btn"
        android:text="lesson01"
        tools:text="lesson01" />

    <Button
        android:id="@+id/lesson02_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lesson01_btn"
        android:layout_alignStart="@+id/lesson01_btn"
        android:layout_below="@+id/lesson01_btn"
        android:layout_marginTop="21dp"
        android:text="lesson02" />

    <Button
        android:id="@+id/lesson03_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/lesson01_btn"
        android:layout_alignRight="@+id/lesson01_btn"
        android:layout_below="@+id/lesson02_btn"
        android:layout_marginTop="38dp"
        android:text="lesson03" />

    <Button
        android:id="@+id/lesson04_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/lesson03_btn"
        android:layout_alignRight="@+id/lesson03_btn"
        android:layout_below="@+id/lesson03_btn"
        android:layout_marginTop="22dp"
        android:text="lesson04" />

    <Button
        android:id="@+id/lesson05_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="lesson05"
        android:layout_below="@+id/lesson04_btn"
        android:layout_alignLeft="@+id/lesson04_btn"
        android:layout_alignStart="@+id/lesson04_btn" />
</RelativeLayout>
